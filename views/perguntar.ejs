<body>
    <%- include ("partials/navbar.ejs") %>
    <div class="container">
        <div class="card mt-5">
            <div class="card-header">
                <h3 class="text-center">Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/salvarpergunta">
                    <label for="titulo">Título</label>
                    <input name="titulo" class="form-control mb-2" type="text" placeholder="Título" required>
                    <label for="descricao">Descrição</label>
                    <textarea name="descricao" placeholder="Descreva a sua pergunta aqui" class="form-control" required></textarea>
                    <button class="btn btn-primary mt-3">Perguntar</button>
                </form>
            </div>
        </div>        
    </div>
</body>
