<%- include ("partials/header.ejs") %>
<body>
    <%- include ("partials/navbar.ejs") %>

    <div class="container">
        <div class="row justify-content-between mt-3 px-3">
        <h1>Perguntas</h1>
        <a href="/perguntar"><button class="btn btn-lg btn-primary">Perguntar</button></a>
        </div>
        <% perguntas.forEach(pergunta => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h3 class="card-title"><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                   <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-primary">Responder</button></a>
                </div>
            </div>
       <% }) %>
    </div>

    <%- include ("partials/footer.ejs") %>
</html>